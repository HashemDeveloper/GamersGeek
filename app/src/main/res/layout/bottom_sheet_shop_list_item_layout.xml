<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet_list_item_container_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16dp"
    >
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_sheet_item_shop_icon_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/iconRightGdLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/steam_store_black_n_white" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/iconRightGdLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bottom_sheet_item_shop_name_view_id"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/cutive"
        android:text="@string/store_name"
        android:textAlignment="textStart"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginStart="@dimen/padding_16dp"
        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/iconRightGdLine"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />
</androidx.constraintlayout.widget.ConstraintLayout>